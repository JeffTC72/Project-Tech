
<section class="profileheader">
    <img src="/public/images/bg-texture.jpg" alt="">
</section>

<section class="profileinfo">
    <span>
        <img src="/public/images/pfp-placeholder.jpg" alt="">
        <h1>{{ this.user }}</h1>
    </span>
</section>

<section class="gamelist">
    <h2>My games:</h2>

    <ul>
    {{#each card}}
        <li class="{{ this.game }}">
            <h3>{{ this.game }}</h3>

            <img src="/public/images/{{ this.game }}.jpg" alt="">
                
            <span>
                <img src="{{ character1.img }}" alt="{{ character1.character }}">
                <img src="{{ character2.img }}" alt="{{ character2.character }}">
                <img src="{{ character3.img }}" alt="{{ character3.character }}">
            </span>

            <article>
                <p>Total hours:</p>
                <h4>{{this.hoursplayed}}</h4>
                <p>Rank:</p>
                <h4>{{this.rank}}</h4>
                <a href="profile/edit-game/{{ this._id }}"><img src="/public/images/pencil.png" alt=""></a>
            </article>

        </li>
    {{ else }}
        <li class="nogame">
            <p>You currently have no games... Click '+' to start adding games</p>
        </li>
    {{/each}}
    </ul>
    <a href="profile/add-game"><img src="/public/images/plus.png" alt=""></a>
</section>